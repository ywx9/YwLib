#pragma once
#include "abc.h"

#ifndef NULL
#define NULL 0
#endif

#define LC_ALL      0
#define LC_COLLATE  1
#define LC_CTYPE    2
#define LC_MONETARY 3
#define LC_NUMERIC  4
#define LC_TIME     5

#if __ywstd_is_exported
extern "C" {
char* __cdecl setlocale(int, const char*);
lconv* __cdecl localeconv();
}
#endif

#if !__ywstd_is_imported
__ywstd_export namespace std {

/// sets the current locale
inline char* __cdecl setlocale(int category, const char* locale) {
  return __ywstd_switch(::setlocale(category, locale), {});
}

/// queries numeric and monetary formatting details of the current locale
inline lconv* __cdecl localeconv() {
  return __ywstd_switch(::localeconv(), {});
}

}
#endif
