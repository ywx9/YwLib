#pragma once
#include "abc.h"

#define CHAR_BIT 8
#define MB_LEN_MAX 5
#define CHAR_MAX (static_cast<char>(char(-1) < 0 ? 127 : 255))
#define CHAR_MIN (static_cast<char>(char(-1) < 0 ? -128 : 0))
#define SCHAR_MAX (127i8)
#define SCHAR_MIN (-127i8 - 1)
#define UCHAR_MAX (255ui8)
#define SHRT_MAX (32767i16)
#define SHRT_MIN (-32767i16 - 1)
#define USHRT_MAX (65535ui16)
#define INT_MAX (2147483647)
#define INT_MIN (-2147483647 - 1)
#define UINT_MAX (4294967295U)
#define LONG_MAX (2147483647L)
#define LONG_MIN (-2147483647L - 1)
#define ULONG_MAX (4294967295UL)
#define LLONG_MAX (9223372036854775807LL)
#define LLONG_MIN (-9223372036854775807LL - 1)
#define ULLONG_MAX (18446744073709551615ULL)
