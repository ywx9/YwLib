// clang-format off
#pragma once
#include "abc.h"

////////////////////////////////////////////////////////////////////////////////
// internal definitions

#if __ywstd_is_exported
extern "C" {
size_t __cdecl mbrtoc16(char16_t*, const char*, size_t, mbstate_t*);
size_t __cdecl c16rtomb(char*, char16_t, mbstate_t*);
size_t __cdecl mbrtoc32(char32_t*, const char*, size_t, mbstate_t*);
size_t __cdecl c32rtomb(char*, char32_t, mbstate_t*);
}
#endif

////////////////////////////////////////////////////////////////////////////////
// public definitions

#if !__ywstd_is_imported
__ywstd_export namespace std {

inline size_t __cdecl mbrtoc16(char16_t* pc16, const char* s, size_t n, mbstate_t* ps) {
  return __ywstd_switch(::mbrtoc16(pc16, s, n, ps), {});
}

inline size_t __cdecl c16rtomb(char* s, char16_t c16, mbstate_t* ps) {
  return __ywstd_switch(::c16rtomb(s, c16, ps), {});
}

inline size_t __cdecl mbrtoc32(char32_t* pc32, const char* s, size_t n, mbstate_t* ps) {
  return __ywstd_switch(::mbrtoc32(pc32, s, n, ps), {});
}

inline size_t __cdecl c32rtomb(char* s, char32_t c32, mbstate_t* ps) {
  return __ywstd_switch(::c32rtomb(s, c32, ps), {});
}

}
#endif
// clang-format on
